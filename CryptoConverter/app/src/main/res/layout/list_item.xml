<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable
            name="viewModel"
            type="com.wizeline.cryptoconverter.conversionList.listItem.ListItemViewModel"/>
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:app="http://schemas.android.com/apk/res-auto"
                  android:layout_width="match_parent"
                  android:layout_height="80dp"
                  android:orientation="horizontal"
                  android:padding="4dp">

        <ImageView
            android:id="@+id/image_from"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:imageUrl = "@{viewModel.item.fromImageUrl}"
            app:srcCompat="@mipmap/ic_launcher_round"/>

        <TextView
            android:id="@+id/text_from"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="8dp"
            android:gravity="center_vertical"
            android:text="@{viewModel.item.fromSymbol}"/>

        <ImageView
            android:id="@+id/image_to"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:imageUrl = "@{viewModel.item.toImageUrl}"
            app:srcCompat="@mipmap/ic_launcher_round"/>

    <TextView
        android:id="@+id/text_change"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:layout_marginLeft="8dp"
        android:gravity="center_vertical"
        android:text="@{viewModel.changeText}"/>

</LinearLayout>
</layout>